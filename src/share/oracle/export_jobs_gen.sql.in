SET LONG 400000
SET PAGESIZE 0
SET LINESIZE 800
SET LONGC 800
SET TRIMSPOOL ON
SET TERM OFF
SET FEEDBACK OFF
set SERVEROUTPUT on

spool JOBS_DIRexport_job.sql
select 'SET LONG 400000' from dual;
select 'SET PAGESIZE 0' from dual;
select 'SET LINESIZE 800' from dual;
select 'SET LONGC 800' from dual;
select 'SET TRIMSPOOL ON' from dual; 
select 'SET TERM OFF' from dual;
select 'SET FEEDBACK OFF' from dual;
select 'set SERVEROUTPUT on' from dual;
DECLARE
   res VARCHAR2(500);
   jobsdir VARCHAR2(500) := 'JOBS_DIR';
BEGIN
   FOR t_name IN (select u.object_name 
   from user_objects u 
   where object_type = 'JOB' 
   AND SUBSTR(u.object_name, 1, 1) = UPPER('j') 
   AND u.object_name = UPPER(jobname)) LOOP
 --   AND u.object_name = UPPER('PKREQUEST')) LOOP
      select 'spool '||jobsdir||'job'||InitCap(LOWER(t_name.object_name))||'.sql' into res from dual;
      dbms_output.put_line (res); 
      select 'select REPLACE(REPLACE(JB, '' "''||OWNER||''"."'', '' "''), ''EDITIONABLE '', '''') AS VW from '||
                    '('||
                       'select TRIM(dbms_metadata.GET_DDL(''PROCOBJ'',u.object_name)) AS JB, '||
                       '(select username from user_users) AS OWNER '||
                       'from user_objects u '||
                       'where object_type = ''JOB'' '||
                       'AND u.object_name = UPPER('''||t_name.object_name||''')'||
                    ') TMP_JOB;' into res from dual;
      dbms_output.put_line (res); 
      select 'select ''/'' from dual;' into res from dual;
      dbms_output.put_line (res); 
      select 'spool off;' into res from dual;
      dbms_output.put_line (res); 
      select ' ' into res from dual;
      dbms_output.put_line (res); 
   END LOOP;
END;
/
select 'exit' from dual;
spool off;
exit
/

